<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Pending Status  -->
    <item android:color="#FFF3E0" android:state_selected="true" android:state_pressed="false"/>
    <item android:color="#FFE0B2" android:state_pressed="true"/>
    <!--  Approved Status  -->
    <item android:color="#E8F5E9" android:state_activated="true"/>
    <!--  Rejected Status  -->
    <item android:color="#FFEBEE" android:state_checked="true"/>
    <!--  In Progress Status  -->
    <item android:color="#E3F2FD" android:state_checkable="true"/>
    <!--  Completed Status  -->
    <item android:color="#E8EAF6" android:state_enabled="true"/>
    <!--  Default (Pending)  -->
    <item android:color="#FFF3E0"/>
</selector>