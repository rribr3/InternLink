<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/applicant_profile_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Applicant"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_button"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/applicant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Applicant Name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/applicant_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Position Applied"
                    android:textColor="#898787"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/applicant_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/indicator_active"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_view_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/ic_profile_view"
                android:contentDescription="View Profile" />

            <ImageView
                android:id="@+id/btn_schedule_interview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/ic_calendar"
                android:contentDescription="Schedule Interview" />

            <ImageView
                android:id="@+id/btn_chat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/ic_chat"
                android:contentDescription="Chat" />

            <ImageView
                android:id="@+id/btn_more_options"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="More Options"
                android:src="@drawable/ic_more" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>