<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="Company Logo"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            android:outlineProvider="background" />

        <!-- Project Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_project_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Project Title"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textColor="#757575"
                    android:textStyle="italic"
                    android:layout_marginBottom="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_project_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Project Description"
                    android:textColor="#424242"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#424242"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_skills_required"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skills Required"
                    android:textColor="#424242"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location / Remote"
                    android:textColor="#424242"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duration &amp; Timeline"
                    android:textColor="#424242"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_payment_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Info"
                    android:textColor="#424242"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_posted_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Posted Date"
                    android:textColor="#424242"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Website"
                    android:textColor="#1A73E8"
                    android:autoLink="web"
                    android:drawablePadding="8dp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Application Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŸ¡ Pending"
                    android:textColor="#FB8C00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_submission_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submission Date"
                    android:textColor="#424242"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_quiz_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student's Quiz Score"
                    android:textColor="#424242"
                    android:drawablePadding="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_withdraw"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Withdraw Application"
                android:textColor="@android:color/white"
                android:backgroundTint="#E53935"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="24dp" />

            <Button
                android:id="@+id/btn_reapply"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reapply"
                android:textColor="@android:color/white"
                android:backgroundTint="#4285F4"
                android:textAllCaps="false"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>