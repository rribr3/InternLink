<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:background="@drawable/pink_gradient_bg">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp">
        <!--  Title with Animation  -->
        <!--  First Row of Cards  -->
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/backButton" android:layout_width="65dp" android:layout_height="43dp" android:background="?attr/selectableItemBackground" android:clickable="true" android:contentDescription="@string/app_name" android:drawableStart="@drawable/white_arrow" android:focusable="true" android:padding="8dp" android:textColor="#000000" android:textSize="16sp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <TextView android:id="@+id/adminDashboardTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="110dp" android:layout_marginTop="15dp" android:fontFamily="sans-serif-medium" android:stateListAnimator="@anim/scale_up" android:text="Dashboard" android:textColor="#FFFFFF" android:textSize="33sp" android:textStyle="bold" android:transitionName="dashboardTitle" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.854" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/firstRow" android:layout_marginTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@id/adminDashboardTitle" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
            <!--  Card 1: Total Students  -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardTotalStudents" style="@style/Widget.MaterialComponents.CardView" android:layout_width="0dp" android:layout_height="180dp" android:layout_marginEnd="8dp" app:cardBackgroundColor="#FFFFFF" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:cardPreventCornerOverlap="true" app:layout_constraintEnd_toStartOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" android:stateListAnimator="@anim/lift_up" android:transitionName="studentsCard">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:layout_gravity="center_horizontal" android:src="@drawable/ic_student" app:tint="#C2185B"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="Total Students" android:textColor="#880E4F" android:textSize="16sp" android:textStyle="bold"/>
                    <TextView android:id="@+id/totalStudentsText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="0" android:textColor="#C2185B" android:textSize="32sp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!--  Card 2: Total Companies  -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardTotalCompanies" style="@style/Widget.MaterialComponents.CardView" android:layout_width="0dp" android:layout_height="180dp" android:layout_marginStart="8dp" app:cardBackgroundColor="#FFFF" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:cardPreventCornerOverlap="true" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintTop_toTopOf="parent" android:stateListAnimator="@anim/lift_up" android:transitionName="companiesCard">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:layout_gravity="center_horizontal" android:src="@drawable/ic_company" app:tint="#C2185B"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="Total Companies" android:textColor="#880E4F" android:textSize="16sp" android:textStyle="bold"/>
                    <TextView android:id="@+id/totalCompaniesText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="0" android:textColor="#C2185B" android:textSize="32sp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <androidx.constraintlayout.widget.Guideline android:id="@+id/guideline" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_begin="190dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--  Second Row of Cards  -->
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/secondRow" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@id/firstRow" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp">
            <!--  Card 3: Active Projects  -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardActiveProjects" style="@style/Widget.MaterialComponents.CardView" android:layout_width="0dp" android:layout_height="180dp" android:layout_marginEnd="8dp" app:cardBackgroundColor="#FFFF" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" android:stateListAnimator="@anim/lift_up" android:transitionName="projectsCard">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:layout_gravity="center_horizontal" android:src="@drawable/ic_project" app:tint="#AD1457"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="Active Projects" android:textColor="#880E4F" android:textSize="16sp" android:textStyle="bold"/>
                    <TextView android:id="@+id/activeProjectsText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="0" android:textColor="#AD1457" android:textSize="32sp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!--  Card 4: Pending Projects  -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardPendingProjects" style="@style/Widget.MaterialComponents.CardView" android:layout_width="0dp" android:layout_height="180dp" android:layout_marginStart="8dp" app:cardBackgroundColor="#FFFF" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline2" app:layout_constraintTop_toTopOf="parent" android:stateListAnimator="@anim/lift_up" android:transitionName="pendingCard">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:layout_gravity="center_horizontal" android:src="@drawable/ic_pending" app:tint="#AD1457"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="Pending Projects" android:textColor="#880E4F" android:textSize="16sp" android:textStyle="bold"/>
                    <TextView android:id="@+id/pendingProjectsText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="0" android:textColor="#AD1457" android:textSize="32sp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <androidx.constraintlayout.widget.Guideline android:id="@+id/guideline2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.5013193"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--  Third Row: Stats Card  -->
        <com.google.android.material.card.MaterialCardView android:id="@+id/cardUserActivity" style="@style/Widget.MaterialComponents.CardView" android:layout_width="match_parent" android:layout_height="250dp" android:layout_marginTop="16dp" app:cardBackgroundColor="#FFFFFF" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:strokeColor="#F8BBD0" app:strokeWidth="2dp" app:layout_constraintTop_toBottomOf="@id/secondRow" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:stateListAnimator="@anim/lift_up" android:transitionName="statsCard">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="User Activity Stats" android:textColor="#D81B60" android:textSize="18sp" android:textStyle="bold"/>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="182dp" android:layout_marginTop="8dp">
                    <com.github.mikephil.charting.charts.LineChart android:id="@+id/userActivityChart" android:layout_width="0dp" android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="MissingClass"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>