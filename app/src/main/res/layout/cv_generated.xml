<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Add Toolbar at the top -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_500"
        android:elevation="4dp"
        app:navigationIcon="@drawable/left_arrow"
        app:navigationIconTint="@color/white"
        app:title="Generate CV"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- PROFESSIONAL HEADER CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/header_gradient"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- NAME & TITLE SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:orientation="vertical">

                        <!-- First Name -->
                        <EditText
                            android:id="@+id/firstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@null"
                            android:hint="FIRST NAME"
                            android:inputType="textPersonName"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#CCFFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            tools:ignore="Autofill,TouchTargetSizeCheck" />

                        <!-- Last Name -->
                        <EditText
                            android:id="@+id/lastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="LAST NAME"
                            android:inputType="textPersonName"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#CCFFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />

                        <!-- Professional Title -->
                    </LinearLayout>

                    <!-- CONTACT INFORMATION -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="end"
                        android:orientation="vertical">

                        <!-- Phone -->
                        <EditText
                            android:id="@+id/phoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@null"
                            android:hint="📞 Phone Number"
                            android:inputType="phone"
                            android:textColor="#E6FFFFFF"
                            android:textColorHint="#99FFFFFF"
                            android:textSize="14sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <!-- Email -->
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@null"
                            android:hint="✉ Email Address"
                            android:inputType="textEmailAddress"
                            android:textColor="#E6FFFFFF"
                            android:textColorHint="#99FFFFFF"
                            android:textSize="14sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <!-- Address -->
                        <EditText
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@null"
                            android:hint="📍 Location"
                            android:inputType="textPostalAddress"
                            android:textColor="#E6FFFFFF"
                            android:textColorHint="#99FFFFFF"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                        <!-- LinkedIn -->
                        <EditText
                            android:id="@+id/linkedin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="🔗 LinkedIn URL"
                            android:inputType="textUri"
                            android:minHeight="48dp"
                            android:textColor="#E6FFFFFF"
                            android:textColorHint="#99FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- PROFILE SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROFESSIONAL PROFILE"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/profileDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write a compelling professional summary that highlights your experience, skills, and career goals. Focus on your unique value proposition and what sets you apart from others in your field."
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:minLines="3"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- EDUCATION SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDUCATION"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_education"
                    android:drawablePadding="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Education Entry 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/university1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"
                        android:hint="University/Institution Name"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/degree1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"
                        android:hint="Degree Program/Field of Study"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/educationStartYear1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg"
                            android:hint="Start Year"
                            android:inputType="number"
                            android:padding="8dp"
                            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                        <EditText
                            android:id="@+id/educationEndYear1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg"
                            android:hint="End Year (or Present)"
                            android:inputType="text"
                            android:padding="8dp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Education Entry 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/university2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"
                        android:hint="University/Institution Name"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/degree2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"
                        android:hint="Degree Program/Field of Study"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        tools:ignore="TextContrastCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/educationStartYear2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg"
                            android:hint="Start Year"
                            android:inputType="number"
                            android:padding="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <EditText
                            android:id="@+id/educationEndYear2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg"
                            android:hint="End Year (or Present)"
                            android:inputType="text"
                            android:padding="8dp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SKILLS SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SKILLS &amp; EXPERTISE"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_skills"
                    android:drawablePadding="8dp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="• Technical Skill 1\n• Technical Skill 2\n• Soft Skill 1\n• Industry Knowledge 1\n• Specialized Tool 1\n• Professional Certification\n• Key Competency"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:minLines="4"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LANGUAGES SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LANGUAGES"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_language"
                    android:drawablePadding="8dp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Multiple language entries with proficiency sliders -->
                <LinearLayout
                    android:id="@+id/languageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Language 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/language1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg"
                            android:hint="Language"
                            android:inputType="text"
                            android:padding="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Spinner
                            android:id="@+id/proficiency1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:entries="@array/proficiency_levels"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <!-- Language 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/language2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg"
                            android:hint="Language"
                            android:inputType="text"
                            android:padding="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Spinner
                            android:id="@+id/proficiency2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:entries="@array/proficiency_levels"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- WORK EXPERIENCE SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROFESSIONAL EXPERIENCE"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_work"
                android:drawablePadding="8dp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Job Entry 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dialog_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <!-- Job Entry 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_background"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/jobTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@null"
                        android:hint="Job Title"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/company1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Company Name"
                            android:inputType="text"
                            android:textStyle="italic"
                            tools:ignore="TouchTargetSizeCheck" />

                        <EditText
                            android:id="@+id/jobLocation1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="end"
                            android:hint="Location"
                            android:inputType="text"
                            tools:ignore="Autofill,TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/jobStartDate1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Start Date"
                            android:inputType="date"
                            tools:ignore="TouchTargetSizeCheck" />

                        <EditText
                            android:id="@+id/jobEndDate1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="end"
                            android:hint="End Date (or Present)"
                            android:inputType="date"
                            tools:ignore="Autofill,TouchTargetSizeCheck" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/jobDescription1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:gravity="start|top"
                        android:hint="• Describe your responsibilities and achievements\n• Use action verbs and quantify results\n• Highlight relevant skills and experiences"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:padding="8dp"
                        android:textColorHint="#546E7A" />
                </LinearLayout>

                <!-- Job Entry 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/jobTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@null"
                        android:hint="Job Title"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="Autofill" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/company2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Company Name"
                            android:inputType="text"
                            android:textStyle="italic" />

                        <EditText
                            android:id="@+id/jobLocation2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="end"
                            android:hint="Location"
                            android:inputType="text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/jobStartDate2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Start Date"
                            android:inputType="date" />

                        <EditText
                            android:id="@+id/jobEndDate2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="end"
                            android:hint="End Date (or Present)"
                            android:inputType="date"
                            tools:ignore="Autofill" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/jobDescription2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:gravity="start|top"
                        android:hint="• Describe your responsibilities and achievements\n• Use action verbs and quantify results\n• Highlight relevant skills and experiences"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- PROJECTS SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROJECTS"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Project 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/projectName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Project Name"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:background="@drawable/edit_text_bg"
                        android:padding="8dp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/projectRole1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your Role"
                        android:inputType="text"
                        android:background="@drawable/edit_text_bg"
                        android:padding="8dp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/projectDescription1"
                        android:layout_width="match_parent"
