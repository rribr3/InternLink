<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:background="@drawable/blue_gradient_bg">
    <TextView android:id="@+id/studentName" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Student Name" android:textStyle="bold" android:textSize="18sp" android:textColor="#FFFF"/>
    <TextView android:id="@+id/studentInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Details here..." android:layout_marginTop="10dp" android:textSize="16sp" android:textColor="#333333"/>
    <!--  Actions  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="16dp" android:gravity="end">
        <Button android:id="@+id/approveStudentBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Approve"/>
        <Button android:id="@+id/rejectStudentBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reject" android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>