<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backButton"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30sp"
        android:layout_marginEnd="220sp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableEnd="@drawable/left_arrow"
        android:focusable="true"
        android:padding="0dp" />

    <TextView
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="8sp"
        android:paddingHorizontal="16dp"
        android:text="Welcome!"
        android:textColor="#0E2A89"
        android:textColorHighlight="#374597"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="249dp"
        android:layout_height="243dp"
        android:src="@drawable/loginicon" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAuth"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:contentSensitivity="auto"
        android:background="@drawable/dialog_background"
        android:elevation="6dp"
        android:drawableTop="@drawable/ic_fingerprint"
        android:drawableTint="#FF000000"
        android:text="" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_Button"
        android:layout_width="275dp"
        android:layout_height="71dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_white"
        android:elevation="6dp"
        android:padding="8dp"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup"
        android:layout_width="273dp"
        android:layout_height="69dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button_blue"
        android:elevation="6dp"
        android:padding="8dp"
        android:text="SIGN UP"
        android:textColor="#0969E6"
        android:textSize="24sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/googleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/googlelogo" />

        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/facebook" />
    </LinearLayout>

</LinearLayout>