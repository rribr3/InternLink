<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_500"
        android:elevation="4dp"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/white" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:visibility="gone" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="16dp">

            <!-- Header Card with Profile Image and Name -->
            <androidx.cardview.widget.CardView
                android:id="@+id/header_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile"
                        android:contentDescription="Profile Image"
                        android:background="@drawable/rounded_background"
                        android:elevation="2dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        tools:text="John Doe" />

                    <TextView
                        android:id="@+id/tv_university"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        tools:text="MIT University" />

                    <!-- Rating Display -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                        <RatingBar
                            android:id="@+id/rating_bar_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.1"
                            android:isIndicator="true"
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="@color/yellow" />

                        <TextView
                            android:id="@+id/tv_rating_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="No reviews yet"
                            tools:text="4.2 (8 reviews)" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Academic Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/academic_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Academic Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <!-- Degree -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Degree:"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_degree"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Computer Science" />
                    </LinearLayout>

                    <!-- GPA -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GPA:"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_gpa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="3.8/4.0" />
                    </LinearLayout>

                    <!-- Graduation Year -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Graduation:"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_gradyear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="2025" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Personal Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/personal_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tv_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        tools:text="Passionate computer science student with experience in mobile app development and machine learning." />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Skills Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Skills"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tv_skills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        tools:text="Java, Python, Android Development, Machine Learning, SQL" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Contact Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contact_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />
                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/blue_500" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            tools:text="john.doe@email.com" />

                        <Button
                            android:id="@+id/btn_contact_email"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Email"
                            android:textSize="12sp"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/blue_500"
                            android:paddingHorizontal="12dp" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_phone"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/blue_500" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            tools:text="+1 234 567 8900" />

                        <Button
                            android:id="@+id/btn_contact_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Call"
                            android:textSize="12sp"
                            android:textColor="@color/blue_500"
                            android:paddingHorizontal="12dp"
                            style="?android:attr/borderlessButtonStyle" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Completed Projects Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completed Projects"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"
                        android:drawableStart="@drawable/ic_folder_open"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_completed_projects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Company Reviews Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/feedback_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header with Add Feedback Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Company Reviews"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_500"
                            android:drawableStart="@drawable/ic_star"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical" />

                        <Button
                            android:id="@+id/btn_add_feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Write Review"
                            android:textSize="12sp"
                            android:textColor="@color/blue_500"
                            android:paddingHorizontal="16dp"
                            android:backgroundTint="@color/white"
                            android:strokeColor="@color/blue_500"
                            android:visibility="gone"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                    <!-- Feedback Summary -->
                    <LinearLayout
                        android:id="@+id/feedback_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_average_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/blue_500"
                                tools:text="4.2" />

                            <RatingBar
                                android:id="@+id/rating_bar_average"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="4.2"
                                android:stepSize="0.1"
                                android:isIndicator="true"
                                style="?android:attr/ratingBarStyleSmall"
                                android:progressTint="@color/yellow" />

                            <TextView
                                android:id="@+id/tv_total_reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                tools:text="Based on 8 reviews" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@color/text_secondary"
                            android:alpha="0.3" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 5 Star Rating -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="8dp"
                                    app:tint="@color/yellow" />

                                <ProgressBar
                                    android:id="@+id/progress_5_star"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    android:progress="50"
                                    android:progressTint="@color/yellow"
                                    style="?android:attr/progressBarStyleHorizontal" />

                                <TextView
                                    android:id="@+id/tv_5_star_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="4"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <!-- 4 Star Rating -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="8dp"
                                    app:tint="@color/yellow" />

                                <ProgressBar
                                    android:id="@+id/progress_4_star"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    android:progress="25"
                                    android:progressTint="@color/yellow"
                                    style="?android:attr/progressBarStyleHorizontal" />

                                <TextView
                                    android:id="@+id/tv_4_star_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="2"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <!-- 3 Star Rating -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="8dp"
                                    app:tint="@color/yellow" />

                                <ProgressBar
                                    android:id="@+id/progress_3_star"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    android:progress="12"
                                    android:progressTint="@color/yellow"
                                    style="?android:attr/progressBarStyleHorizontal" />

                                <TextView
                                    android:id="@+id/tv_3_star_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="1"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <!-- 2 Star Rating -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="8dp"
                                    app:tint="@color/yellow" />

                                <ProgressBar
                                    android:id="@+id/progress_2_star"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    android:progress="12"
                                    android:progressTint="@color/yellow"
                                    style="?android:attr/progressBarStyleHorizontal" />

                                <TextView
                                    android:id="@+id/tv_2_star_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="1"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <!-- 1 Star Rating -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="8dp"
                                    app:tint="@color/yellow" />

                                <ProgressBar
                                    android:id="@+id/progress_1_star"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    android:progress="0"
                                    android:progressTint="@color/yellow"
                                    style="?android:attr/progressBarStyleHorizontal" />

                                <TextView
                                    android:id="@+id/tv_1_star_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="0"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Horizontal RecyclerView for Feedback -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal" />

                    <!-- No Reviews Message -->
                    <LinearLayout
                        android:id="@+id/no_reviews_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_star"
                            android:layout_marginBottom="16dp"
                            app:tint="@color/text_secondary"
                            android:alpha="0.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No company reviews yet"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Companies will be able to review this student after completed projects"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:alpha="0.8" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_view_cv"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="View CV"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/blue_500"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_contact"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Contact"
                    android:textColor="@color/blue_500"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:onClick="showContactOptions" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>