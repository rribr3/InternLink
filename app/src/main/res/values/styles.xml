<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullScreenBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullScreenBottomSheetStyle</item>
    </style>
    <style name="FullScreenBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="DialogSlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="ActionButtonStyle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
    <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="closeIconSize">16dp</item>
        <item name="closeIconTint">@color/chip_close_icon</item>
    </style>
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="ProfessionalDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Window attributes -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>

        <!-- Text styles using system fonts -->
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextAppearance</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextAppearance</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>

        <!-- Background -->

    </style>

    <style name="DialogTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DialogBodyTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/secondary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>